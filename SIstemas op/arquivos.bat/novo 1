@echo off
::BIBLIOTECA (DIC. Brasileiro) UTF-8 
chcp 65001 >nul 
:inicio 
cls
echo Escolha uma opção
echo 1- Abrir Calculadora 
echo 2- Abrir Paint
echo 3- Abrir Bloco de Notas

::CRIAR UMA VARIÁVEL E ATRIBUIR VALOR 
set /p opcao="Digite sua opção:" 

if "%opcao%"=="1" (
     echo Você escolheu abrir a Calculadora!
     start calc.exe 
)

if "%opcao%"=="2" (
     echo Você escolheu abrir o Paint!
     start mspaint.exe
)

if "%opcao%"=="3" (
     echo Você escolheu abrir o Bloco de Notas!
     start notepad.exe
)

cls
goto inicio
